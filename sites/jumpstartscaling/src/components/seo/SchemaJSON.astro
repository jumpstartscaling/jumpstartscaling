---
interface Props {
  title: string;
  description: string;
  image?: string;
  date?: string;
  slug: string;
}

const { title, description, image, date, slug } = Astro.props;
const canonicalURL = new URL(slug, Astro.site || 'https://jumpstartscaling.com');

const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image ? new URL(image, Astro.url).toString() : undefined,
  "datePublished": date,
  "author": {
    "@type": "Organization",
    "name": "Jumpstart Scaling"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Jumpstart Scaling",
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/logo.png", Astro.url).toString()
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.toString()
  }
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
