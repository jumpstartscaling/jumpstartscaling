---
// Golden Bullet List Component
// Usage: Features, steps, benefits
interface Props {
  items: Array<{
    icon: 'check' | 'arrow' | 'lightning' | 'star' | 'circuit' | 'server' | 'chart' | 'pen' | 'shield' | 'clock';
    text: string;
  }>;
  columns?: 1 | 2;
}

const { items, columns = 2 } = Astro.props;

const iconSvgs = {
  check: '<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" fill="none"/>',
  arrow: '<path d="M13 7l5 5m0 0l-5 5m5-5H6" stroke="currentColor" stroke-width="2" fill="none"/>',
  lightning: '<path d="M13 10V3L4 14h7v7l9-11h-7z" fill="currentColor"/>',
  star: '<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/>',
  circuit: '<circle cx="12" cy="12" r="3" fill="currentColor"/><path d="M12 1v6m0 6v6M1 12h6m6 0h6" stroke="currentColor" stroke-width="2"/>',
  server: '<rect x="3" y="4" width="18" height="8" rx="2" stroke="currentColor" stroke-width="2" fill="none"/><rect x="3" y="12" width="18" height="8" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>',
  chart: '<path d="M3 3v18h18M7 15l4-4 4 4 5-6" stroke="currentColor" stroke-width="2" fill="none"/>',
  pen: '<path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" fill="none"/>',
  shield: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" fill="none"/>',
  clock: '<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" fill="none"/>'
};
---

<ul class="golden-bullets" data-columns={columns}>
  {items.map(item => (
    <li class="bullet-item">
      <svg class="bullet-icon" viewBox="0 0 24 24" width="24" height="24" set:html={iconSvgs[item.icon]} />
      <span class="bullet-text">{item.text}</span>
    </li>
  ))}
</ul>

<style>
  .golden-bullets {
    list-style: none;
    display: grid;
    gap: 1.5rem;
    margin: 2rem 0;
  }
  
  .golden-bullets[data-columns="2"] {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .golden-bullets[data-columns="1"] {
    grid-template-columns: 1fr;
  }
  
  .bullet-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .bullet-icon {
    flex-shrink: 0;
    margin-top: 0.2rem;
    background: linear-gradient(135deg, #C9A961, #FFD700);
    -webkit-mask: var(--icon-path);
    mask: var(--icon-path);
  }
  
  .bullet-icon :global(path),
  .bullet-icon :global(circle),
  .bullet-icon :global(rect) {
    stroke: url(#gold-gradient);
  }
  
  .bullet-text {
    color: #ddd;
    font-size: 1.125rem;
    line-height: 1.6;
  }
  
  /* SVG Gradient Definition */
  :global(svg defs) {
    display: none;
  }
</style>

<svg width="0" height="0" style="position: absolute;">
  <defs>
    <linearGradient id="gold-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#C9A961;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFD700;stop-opacity:1" />
    </linearGradient>
  </defs>
</svg>
