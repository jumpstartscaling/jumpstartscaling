---
// Glass Info Card Component
// Usage: Stats, comparisons, "Did You Know" facts
interface Props {
  title?: string;
  stat?: string;
  description: string;
  icon?: string;
  accentColor?: 'gold' | 'red' | 'green';
}

const { title, stat, description, icon, accentColor = 'gold' } = Astro.props;

const accentColors = {
  gold: 'rgba(201, 169, 97, 0.2)',
  red: 'rgba(239, 68, 68, 0.2)',
  green: 'rgba(34, 197, 94, 0.2)'
};

const hoverColors = {
  gold: '#C9A961',
  red: '#EF4444',
  green: '#22C55E'
};
---

<div class="glass-card" data-accent={accentColor}>
  {icon && <div class="card-icon">{icon}</div>}
  
  {title && <h3 class="card-title">{title}</h3>}
  
  {stat && <div class="card-stat">{stat}</div>}
  
  <p class="card-description">{description}</p>
</div>

<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(201, 169, 97, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 2rem;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .glass-card[data-accent="red"] {
    border-color: rgba(239, 68, 68, 0.2);
  }
  
  .glass-card[data-accent="green"] {
    border-color: rgba(34, 197, 94, 0.2);
  }
  
  .glass-card:hover {
    border-color: #C9A961;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(201, 169, 97, 0.3);
  }
  
  .glass-card[data-accent="red"]:hover {
    border-color: #EF4444;
  }
  
  .glass-card[data-accent="green"]:hover {
    border-color: #22C55E;
  }
  
  .card-icon {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 3rem;
    opacity: 0.2;
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #C9A961;
    margin-bottom: 1rem;
  }
  
  .card-stat {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, #C9A961, #FFD700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
  }
  
  .card-description {
    color: #ddd;
    line-height: 1.6;
    font-size: 1rem;
  }
</style>
