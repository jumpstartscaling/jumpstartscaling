---
interface Props {
  serviceName: string;
  prompt: string;
  useCase: string;
}

const { serviceName, prompt, useCase } = Astro.props;
---

<section class="diy-ai-section">
  <div class="container">
    <div class="diy-header">
      <span class="mono-label">DO IT YOURSELF</span>
      <h2>Train Your Own AI <span class="accent-text">Analyst</span></h2>
      <p>Not ready to hire us? Use this exact prompt to train ChatGPT or Claude to handle basic {serviceName} tasks for you.</p>
    </div>

    <div class="prompt-box">
      <div class="prompt-header">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
        <span class="file-name">system_prompt.txt</span>
      </div>
      <pre><code>{prompt}</code></pre>
      <button class="copy-btn" onclick="navigator.clipboard.writeText(this.previousElementSibling.innerText); this.innerText = 'Copied!'; setTimeout(() => this.innerText = 'Copy Prompt', 2000);">
        Copy Prompt
      </button>
    </div>
    
    <div class="disclaimer">
      <p><strong>Note:</strong> AI can analyze data, but it cannot execute strategy. Use this for {useCase}.</p>
    </div>
  </div>
</section>

<style>
  .diy-ai-section {
    padding: 6rem 0;
    background: linear-gradient(180deg, #000 0%, #0a0a0a 100%);
    border-top: 1px solid rgba(201, 169, 97, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .mono-label {
    font-family: 'Courier New', monospace;
    color: #C9A961;
    letter-spacing: 2px;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: 1rem;
    font-weight: 800;
  }

  .accent-text {
    background: linear-gradient(135deg, #C9A961, #FFD700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    color: #aaa;
    max-width: 600px;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .prompt-box {
    background: #111;
    border: 1px solid #333;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
  }

  .prompt-header {
    background: #222;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid #333;
  }

  .dot { width: 10px; height: 10px; border-radius: 50%; }
  .red { background: #ff5f56; }
  .yellow { background: #ffbd2e; }
  .green { background: #27c93f; }
  .file-name { color: #888; font-family: monospace; font-size: 0.8rem; margin-left: 10px; }

  pre {
    padding: 1.5rem;
    overflow-x: auto;
    color: #d4d4d4;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.9rem;
    white-space: pre-wrap;
    margin: 0;
  }

  .copy-btn {
    position: absolute;
    top: 5rem;
    right: 1.5rem;
    background: rgba(201, 169, 97, 0.2);
    color: #C9A961;
    border: 1px solid #C9A961;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s;
  }

  .copy-btn:hover {
    background: #C9A961;
    color: #000;
  }

  .disclaimer {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    border-left: 3px solid #C9A961;
    padding-left: 1rem;
  }
</style>
